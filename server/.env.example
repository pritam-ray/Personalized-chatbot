# Server Configuration
PORT=4000

# MySQL Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=chatbot

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# Email Configuration (Required for password reset functionality)
# Choose your email service provider: gmail, outlook, yahoo, sendgrid, etc.
EMAIL_SERVICE=gmail

# For Gmail: Use App Password (not your regular password)
# Enable 2FA first, then generate app password at: https://myaccount.google.com/apppasswords
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Alternative SMTP Configuration (if not using a service)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173
